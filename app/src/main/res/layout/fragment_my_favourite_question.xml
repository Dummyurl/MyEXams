<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.saxxis.myexamspace.fragments.profiletabhosts.myfavouritequestions.MyFavouriteQuestionFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_margin="2dp"
        android:background="#d3f5ea"
        android:id="@+id/question_name"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rg_ansgp"
        android:orientation="vertical">

        <RadioButton
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="14sp"
            android:id="@+id/rb_ans_1"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <RadioButton
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="14sp"
            android:id="@+id/rb_ans_2"
            android:layout_margin="5dp"
            android:drawablePadding="10dp"
            android:textColor="@color/black"/>

        <RadioButton
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="14sp"
            android:id="@+id/rb_ans_3"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <RadioButton
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="14sp"
            android:id="@+id/rb_ans_4"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>

        <!-- <com.saxxis.myexams.helper.utils.TextViewWithImages
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="5dp"
             android:id="@+id/myradiobutton"/>-->


    </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/explanation_layout"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_bg"
                android:typeface="sans"
                android:text="Explanation:"/>

            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/explanation_describe"
                android:textSize="14sp"
                android:padding="5dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
</FrameLayout>
