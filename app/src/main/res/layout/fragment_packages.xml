<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.saxxis.myexamspace.fragments.PackagesFragment">

        <android.support.design.widget.TabLayout
            android:id="@+id/packagetabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/tabselector"
            app:tabIndicatorColor="@color/white"
            app:tabTextColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"/>



        <com.saxxis.myexamspace.helper.utils.CustomViewPager
            android:id="@+id/viewpager_package"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>
